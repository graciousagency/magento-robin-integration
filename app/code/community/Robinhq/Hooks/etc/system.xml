<?xml version="1.0"?>
<config>
    <tabs>
        <robinhq translate="label" module="hooks">
            <label>RobinHQ</label>
            <sort_order>150</sort_order>
        </robinhq>
    </tabs>
    <sections>
        <settings translate="label" module="hooks">
            <label>Settings</label>
            <tab>robinhq</tab>
            <frontend_type>text</frontend_type>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <general translate="label">
                    <label>API Settings</label>
                    <frontend_type>text</frontend_type>
                    <sort_order>0</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <expanded>1</expanded>
                    <fields>
                        <enabled translate="label">
                            <label>Enabled</label>
                            <comment>Turn the module on or off</comment>
                            <frontend_type>select</frontend_type>
                            <source_model>hooks/system_config_dropdown_values</source_model>
                            <sort_order>30</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                        <api_key translate="label">
                            <label>API Key</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>100</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Your Robin api key</comment>
                        </api_key>
                        <api_secret translate="label">
                            <label>API Secret</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>200</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Your Robin api secret</comment>
                        </api_secret>
                        <api_url translate="label">
                            <label>API Url</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>300</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>Robin API url</comment>
                        </api_url>
                        <bulk_limit translate="label">
                            <label>Bulk Limit</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>300</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>The max number of items to send to Robin in one api request. If you get "Bad
                                job" errors in the queue, fill in a lower value. We recommend a value between 10 and 20.
                            </comment>
                        </bulk_limit>
                        <select_limit translate="label">
                            <label>Select Limit</label>
                            <frontend_type>text</frontend_type>
                            <sort_order>300</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                            <comment>This value is for collection pagination. If you get memory issues, fill in a
                                lower value.
                            </comment>
                        </select_limit>
                    </fields>
                </general>
            </groups>
        </settings>
    </sections>
</config>
